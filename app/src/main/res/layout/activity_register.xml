<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.4"
        android:src="@drawable/mymo_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.165"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="회원가입"
        android:fontFamily="@font/nanumsquareb"
        android:textSize="16sp"
        android:textColor="@color/main_color"/>

    <TextView
        android:id="@+id/register_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="이름"
        app:layout_constraintLeft_toLeftOf="@id/register_name_input"/>


    <EditText
        android:id="@+id/register_name_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_round"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/register_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/register_id_tv"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/register_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="아이디"
        app:layout_constraintLeft_toLeftOf="@id/register_name_input"/>


    <EditText
        android:id="@+id/register_id_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_round"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/register_id_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginTop="20dp"/>





    <TextView
        android:id="@+id/register_pw_tv"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/register_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="비밀번호"
        app:layout_constraintLeft_toLeftOf="@id/register_name_input"/>


    <EditText
        android:id="@+id/register_pw_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_round"
        android:textColor="#000"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/register_pw_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/register_marimoName_tv"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/register_pw_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="마리모 이름"
        app:layout_constraintLeft_toLeftOf="@id/register_name_input"/>


    <EditText
        android:id="@+id/register_marimoName_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_round"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/register_marimoName_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginTop="20dp"/>





    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="가입하기"
        android:id="@+id/register_registerBtn"
        app:layout_constraintTop_toBottomOf="@id/register_marimoName_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:textColor="#fff"
        style="@style/ButtonStlye123"
        android:fontFamily="@font/nanumsquareb"
        />

    <TextView
        android:id="@+id/login_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/register_registerBtn"
        app:layout_constraintRight_toRightOf="@id/register_registerBtn"
        app:layout_constraintTop_toBottomOf="@id/register_registerBtn"
        android:layout_marginTop="25dp"
        android:text="이미 계정이 있으신가요?"
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.3"
        />
    <TextView
        android:id="@+id/question_bt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/login_question_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_question_tv"
        app:layout_constraintLeft_toRightOf="@id/login_question_tv"
        android:textColor="@color/main_color"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/nanumsquareb"
        android:text="로그인 하기"/>



</androidx.constraintlayout.widget.ConstraintLayout>