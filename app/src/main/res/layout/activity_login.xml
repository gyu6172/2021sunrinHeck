<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintWidth_percent="0.4"
        android:src="@drawable/mymo_icon"
        />

    <TextView
        android:id="@+id/login_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        android:textColor="#000"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/login_id_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_id_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edit_round"
        android:layout_marginLeft="20dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.08"/>


    <TextView
        android:id="@+id/login_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        android:textColor="#000"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/login_pw_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pw_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/edit_round"
        android:layout_marginLeft="20dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/remember_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="비밀번를 잊으셨나요?"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/login_pw_input"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/login_pw_input"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_loginbtn"
        app:layout_constraintTop_toBottomOf="@id/remember_pw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="35dp"
        style="@style/ButtonStlye123"
        android:textColor="#fff"
        android:textSize="16sp"
        android:paddingVertical="15dp"
        android:fontFamily="@font/nanumsquareb"
        android:text="로그인"/>

    <TextView
        android:id="@+id/login_register_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_loginbtn"
        app:layout_constraintLeft_toLeftOf="@id/login_loginbtn"
        android:layout_marginLeft="10dp"
        android:text="아직 마이모 사용하고 있지 않으신가요?"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/login_register_btn"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/login_register_question_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_register_question_tv"
        app:layout_constraintLeft_toRightOf="@id/login_register_question_tv"
        android:text="가입하기"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="@color/main_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>